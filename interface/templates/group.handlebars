<h2>Escolha de Grupos</h2>

<div id="escolha-grupo-div" class="escolha-disponibilidade-div col-xs-12">
      <div class="lista-grupos" id="lista-grupos">
            {{#each grupos}}
            <button id="grupo-escolhe-{{id}}" class="btn btn-sm btn-escolha-grupo" onclick="escolhaGrupo.ActivateGroup({{id}});">{{nome}}</button>
            {{/each}}
      </div>
      <div class="grade-horarios" id="grade-horario-escolha-grupos">
            <div>Escolha um dos grupos</div>
      </div>
</div>
<hr/>
<div class="content-form col-xs-12">
      <div class="pull-left">
            <input type="text" maxlength="30" id="nome-grupo-input" />
            <button class="btn btn-primary" onclick="escolhaGrupo.AddGroup();"><span class="glyphicon glyphicon-plus"></span>Adicionar Grupo</button>
      </div>
      
</div>

